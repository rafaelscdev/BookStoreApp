[flake8]
max-line-length = 120
extend-ignore = E203, W503
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    .venv,
    */migrations/*,
    venv,
    env,
    .env,
    */site-packages/*
per-file-ignores =
    __init__.py:F401
    tests/*:S101,S106
max-complexity = 10
statistics = True
count = True
show-source = True 